{
  "name": "read-js",
  "description": "Detects if the user is reading the article",
  "version": "1.5.0",
  "main": "build/js/read.js",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-jest": "^24.8.0",
    "grunt": "^1.0.4",
    "grunt-babel": "^8.0.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^3.4.0",
    "grunt-eslint": "^20.2.0",
    "grunt-run": "^0.8.1",
    "jest": "^24.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loawingr/read-js.git"
  },
  "scripts": {
    "test": "jest",
    "build": "grunt",
    "prepare": "npm run build"
  },
  "jest": {
    "coverageThreshold": {
      "src/js/*.js": {
        "branches": 75,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/build/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "verbose": false
  }
}
