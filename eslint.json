{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals" : {
        "document" : true,
        "console" : true,
        "alert" : true,
        "window" : true,
        "escape" : true,
        "unescape" : true,
        "module" : true,
        "CBC" : true,
        "setTimeout" : true,
        "s_cbc_sitecatalyst" : true,
        "_sf_async_config" : true,
        "XMLHttpRequest" : true,
        "clearTimeout" : true,
        "Visitor" : true,
        "Conductrics": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    // See https://eslint.org/docs/rules/ for rules
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0, // allow console.log etc
        "no-extra-boolean-cast": 0, // allow using !! to cast to boolean
        "no-unused-vars":
            ["error",
            {
                "vars": "all", // no unused variables in any scope
                // allow trailing unused args since functions may be called with
                // them even if they aren't used in the function
                "args": "none"
            }
        ],
        "no-trailing-spaces": ["error"],
        "curly": ["error"],
        "no-extend-native": ["error"],
        "prefer-const": ["error"]
    }
}
